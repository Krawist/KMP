<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/fab_margin"
    android:paddingTop="@dimen/fab_margin"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/textview_dialog_with_field_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:text="@string/nouvelle_playlist"
        android:layout_marginBottom="@dimen/fab_margin"
        android:paddingRight="@dimen/fab_margin"
        android:maxLines="1"/>

    <EditText
        android:id="@+id/editext_dialog_with_one_field_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nom de la playlist"
        android:layout_marginRight="@dimen/fab_margin"
        android:typeface="normal"
        android:inputType="textShortMessage"
        android:theme="@style/PrimaryColorAccent"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right">

        <Button
            android:id="@+id/button_dialog_negative_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/annuler"
            android:layout_toLeftOf="@id/button_dialog_positive_action"
            android:background="@android:color/transparent"/>


        <Button
            android:id="@+id/button_dialog_positive_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK"
            android:background="@android:color/transparent" />


    </LinearLayout>

</LinearLayout>