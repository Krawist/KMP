<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.PlaybackParamsFragment"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pitch"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:layout_marginLeft="@dimen/fab_margin"
                    android:layout_marginStart="@dimen/fab_margin"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="@dimen/fab_margin"
                    android:layout_marginBottom="@dimen/fab_margin"
                    android:layout_marginRight="8dp"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/textview_fragment_playback_picth_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.0f"
                    android:layout_marginTop="@dimen/fab_margin"
                    android:layout_marginBottom="@dimen/fab_margin"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textColor="@android:color/black"
                    android:layout_marginRight="@dimen/fab_margin"
                    android:layout_marginEnd="@dimen/fab_margin"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#2A000000"
                android:padding="8dp"
                android:layout_gravity="center_horizontal">

                <Button
                    android:id="@+id/button_fragment_plaback_increase_pitch"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/round_button_pith_effect"
                    android:textColor="@color/colorPrimary"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:text="#"
                    android:layout_marginBottom="@dimen/fab_margin"/>

                <Button
                    android:id="@+id/button_fragment_plaback_decrease_pitch"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/round_button_pith_effect"
                    android:textColor="@color/colorPrimary"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:text="b"
                    android:layout_marginTop="@dimen/fab_margin"/>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Speed"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:layout_marginLeft="@dimen/fab_margin"
                    android:layout_marginStart="@dimen/fab_margin"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="@dimen/fab_margin"
                    android:layout_marginBottom="@dimen/fab_margin"
                    android:layout_marginRight="8dp"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/textview_frgament_playback_speed_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.0f"
                    android:layout_marginTop="@dimen/fab_margin"
                    android:layout_marginBottom="@dimen/fab_margin"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textColor="@android:color/black"
                    android:layout_marginRight="@dimen/fab_margin"
                    android:layout_marginEnd="@dimen/fab_margin"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#2A000000"
                android:padding="8dp"
                android:layout_gravity="center_horizontal">

                <Button
                    android:id="@+id/button_fragment_plaback_increase_speed"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/round_button_pith_effect"
                    android:textColor="@color/colorPrimary"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:text="+"
                    android:layout_marginBottom="@dimen/fab_margin"/>

                <Button
                    android:id="@+id/button_fragment_plaback_decrease_speed"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/round_button_pith_effect"
                    android:textColor="@color/colorPrimary"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:text="-"
                    android:layout_marginTop="@dimen/fab_margin"/>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/imageButton_fragment_playback_reset_pitch_and_speed"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/round_button_pith_effect"
        android:layout_margin="@dimen/fab_margin"
        android:rotation="-90"
        android:src="@drawable/ic_baseline_refresh_24"
        android:tint="@color/colorPrimary"/>


</LinearLayout>