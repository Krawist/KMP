<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:paddingRight="@dimen/fab_margin"
    android:layout_marginLeft="@dimen/fab_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="@dimen/size_8dp"
        android:paddingBottom="@dimen/size_8dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imageview_simple_item_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="@dimen/fab_margin"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:singleLine="true"
                android:id="@+id/textview_simple_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Titre musique"
                android:textColor="@android:color/black"
                android:paddingBottom="@dimen/size_4dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

            <TextView
                android:id="@+id/textview_simple_item_second_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Titre musique"
                android:alpha=".8"
                android:textColor="@android:color/black"
                android:singleLine="true"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/size_8dp">
            <TextView
                android:id="@+id/textview_simple_item_third_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="03:28"
                android:alpha=".8"
                android:gravity="bottom"
                android:textColor="@android:color/black"/>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:background="@android:color/black"
        android:alpha=".3"
        android:layout_marginLeft="56dp"/>

</LinearLayout>