<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="170dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    android:layout_marginRight="@dimen/size_8dp"
    android:layout_marginLeft="@dimen/size_8dp"
    android:layout_marginBottom="@dimen/size_8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:background="@color/colorPrimary">

            <LinearLayout
                android:id="@+id/layout_playlist_cover_first_block"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageview_playlist_cover_first_image"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@color/colorSecondaryDark"/>

                <ImageView
                    android:id="@+id/imageview_playlist_cover_second_image"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@color/colorSecondaryLight"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_playlist_cover_second_block"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageview_playlist_cover_third_image"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@color/colorSecondary"/>

                <ImageView
                    android:id="@+id/imageview_playlist_cover_fourth_image"
                    android:layout_width="0dp"
                    android:scaleType="centerCrop"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/size_8dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/textview_playlist_item_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:alpha=".8"
                android:textColor="@android:color/black"
                android:text="Baset"/>

            <ImageButton
                android:alpha=".6"
                android:id="@+id/imagebutton_playlist_item_play_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_play_circle_outline_black_24dp"
                android:backgroundTint="@android:color/transparent"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>